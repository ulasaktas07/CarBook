@model List<ReviewByCarIdDto>
<div class="tab-pane fade" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
    <div class="row">
        <div class="col-md-7">
            <h3 class="head"> @Model.Count() Değerlendirme
            </h3>
            @foreach (var item in Model)
            {
                <div class="review d-flex">
                    <div class="user-img" style="background-image: url(@item.CustomerImage)"></div>
                    <div class="desc">
                        <h4>
                            <span class="text-left">@item.CustomerName </span>
                            <span class="text-right">@item.Created</span>
                        </h4>
                        <p class="star">
                            <span>
                                @if (item.RaytingValue == 5)
                                {
                                    <i class="ion-ios-star"></i>
                                    <i class="ion-ios-star"></i>
                                    <i class="ion-ios-star"></i>
                                    <i class="ion-ios-star"></i>
                                    <i class="ion-ios-star"></i>
                                }
                                @if (item.RaytingValue == 4)
                                {
                                    <i class="ion-ios-star"></i>
                                    <i class="ion-ios-star"></i>
                                    <i class="ion-ios-star"></i>
                                    <i class="ion-ios-star"></i>
                                }
                                @if (item.RaytingValue == 3)
                                {
                                    <i class="ion-ios-star"></i>
                                    <i class="ion-ios-star"></i>
                                    <i class="ion-ios-star"></i>
                                }
                                @if (item.RaytingValue == 2)
                                {
                                    <i class="ion-ios-star"></i>
                                    <i class="ion-ios-star"></i>
                                }
                                @if (item.RaytingValue == 1)
                                {
                                    <i class="ion-ios-star"></i>
                                }

                            </span>
                            <span class="text-right"><a href="#" class="reply"><i class="icon-reply"></i></a></span>
                        </p>
                        <p>@item.Comment</p>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-5">
            <div class="rating-wrap">
                <h3 class="head">Yorum Yapın</h3>
                <div class="wrap">
                    <p class="star">
                    
                        <span>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            (98%)
                        </span>
                        <span> @Model.Count(x => x.RaytingValue == 5) Yorum</span>
                    </p>
                    <p class="star">
                        <span>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            (85%)
                        </span>
                        <span> @Model.Count(x => x.RaytingValue == 4) Yorum</span>
                    </p>
                    <p class="star">
                        <span>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            (70%)
                        </span>
                        <span> @Model.Count(x => x.RaytingValue == 3) Yorum</span>
                    </p>
                    <p class="star">
                        <span>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            (10%)
                        </span>
                        <span> @Model.Count(x => x.RaytingValue == 2) Yorum</span>
                    </p>
                    <p class="star">
                        <span>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            (0%)
                        </span>
                        <span> @Model.Count(x => x.RaytingValue == 1) Yorum</span>
                    </p>
                </div>
                
            </div>
        </div>
    </div>
</div>