@model List<CarDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="row">
        <div class="card-body">
            <h4 class="card-title">Araba Listesi</h4>
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Marka</th>
                            <th>Model</th>
                            <th>Vites Türü</th>
                            <th>Km</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>
                            <th>Sitede Gör</th>
                            <th>Fiyat Bilgileri</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;    
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.BrandName</td>
                                <td>@item.Model</td>
                                <td>@item.Transmission</td>
                                <td>@item.Km</td>
                                <td><a href="/AdminCar/RemoveCar/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/AdminCar/UpdateCar/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                <td><a href="/Admin/CarFeatureDetail/Index/@item.Id" class="btn btn-outline-dark">Detaylar</a> </td>
                                <td><a href="/AdminCar/CarDetail/@item.Id" class="btn btn-outline-warning">Sitede Gör</a> </td>
                                <td><a href="/AdminCar/CarDetail/@item.Id" class="btn btn-outline-secondary">Fiyat Bilgileri</a> </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/AdminCar/CreateCar/" class="btn btn-outline-primary">Yeni Araç Girişi</a>
            </div>

        </div>
        <!-- end card-body-->
    </div>
    <!-- end card -->

</div>

