@model UpdateCarRequest
@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="row">
        <div class="card-body">

            <h4 class="card-title">Araç Güncelleme Sayfası</h4>
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label for="exampleInputBrand">Marka</label>
                    @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.Brands, "Marka Seçiniz", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputModel">Model</label>
                    <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model Girişi Yapınız">
                </div>
                <div class="form-group">
                    <label for="exampleInputCoverImage">Kapak Fotoğrafı</label>
                    <input type="text" class="form-control" id="exampleInputCoverImage" asp-for="CoverImageUrl" placeholder="Kapak Fotoğraf Linkini Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputKm">Km</label>
                    <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Kilometre Bilgisi Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputTransmission">Vites Türü</label>
                    <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder=" Vites Türü Girişi Yapınız">
                </div>
                <div class="form-group">
                    <label for="exampleInputSeat">Koltuk Sayısı</label>
                    <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Koltuk Sayısını Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputLunggage">Bagaj Sayısı</label>
                    <input type="number" class="form-control" id="exampleInputLunggage" asp-for="Lunggage" placeholder="Bagaj Sayısını Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputFuel">Yakıt Türünü </label>
                    <input type="text" class="form-control" id="exampleInputFuel" asp-for="Fuel" placeholder="Yakıt Türünü Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputBigImageUrl">Büyük Kapak Fotoğrafı </label>
                    <input type="text" class="form-control" id="exampleInputBigImageUrl" asp-for="BigImageUrl" placeholder="Büyük Kapak Fotoğrafı Giriniz">
                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Güncelle</button>
            </form>

        </div> <!-- end card-body-->
    </div> <!-- end card-->


</div>
<!-- end card-body-->
