@model UpdateLocationRequest

@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="row">
        <div class="card-body">

            <h4 class="card-title">Lokasyon Veri Güncelleme Alanı</h4>
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label for="exampleInputName">Lokasyon Adı</label>
                    <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Lokasyon Adını Giriniz">
                </div>
                <button type="submit" class="btn btn-primary waves-effect waves-light"> Lokasyonu Güncelle</button>
            </form>

        </div> <!-- end card-body-->
    </div> <!-- end card-->


</div>
<!-- end card-body-->
