@model List<ServiceDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="row">
        <div class="card-body">
            <h4 class="card-title">Hizmet Bilgileri Alanı</h4>
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Icon-Url</th>
                            <th>Sil</th>
                            <th>Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.IconUrl</td>
                                <td><a href="/Admin/Service/RemoveService/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Admin/Service/UpdateService/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/Service/CreateService/" class="btn btn-outline-primary">Yeni Hizmet Girişi</a>
            </div>

        </div>
        <!-- end card-body-->
    </div>
    <!-- end card -->

</div>






