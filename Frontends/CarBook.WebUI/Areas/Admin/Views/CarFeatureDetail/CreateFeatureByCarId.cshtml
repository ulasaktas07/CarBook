@model List<FeatureDto>
@{
    ViewData["Title"] = "CreateFeatureByCarId";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="row">
        <div class="card-body">
            <h4 class="card-title">Araca Ait Özellikler Ekleme Sayfası</h4>

            <form method="post">

                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <input type="hidden" asp-for="@Model[i].Name" />
                        <input type="checkbox"  class="form-check-input" />
                        <label class="form-check-label">@Model[i].Name</label>
                    </div>
                }
                <button class="btn btn-primary mt-3">Araca Özellikleri Ata</button>
            </form>
        </div>
        <!-- end card-body-->
    </div>
    <!-- end card -->

</div>
