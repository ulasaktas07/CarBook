@model List<CarFeatureByCarIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="row">
        <div class="card-body">
            <h4 class="card-title">Araca Ait Özellikler Listesi</h4>

            <form method="post">

                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="@Model[i].id" />
                        <input type="hidden" asp-for="@Model[i].featureName" />
                        <input type="checkbox" asp-for="@Model[i].available" class="form-check-input" />
                        <label class="form-check-label" for="@Model[i].available">@Model[i].featureName</label>
                    </div>
                }
                <button class="btn btn-success mt-3">Değişiklikleri Kaydet</button> 
            </form>
        </div>
        <!-- end card-body-->
    </div>
    <!-- end card -->

</div>