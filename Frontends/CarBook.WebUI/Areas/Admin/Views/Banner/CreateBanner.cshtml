@model CreateBannerRequest

@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="row">
        <div class="card-body">

            <h4 class="card-title">Yeni Banner Bigisi Girişi</h4>
            <form method="post">
                <div class="form-group">
                    <label for="exampleInputTitle">Başlık</label>
                    <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlığı Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputDescription">Açıklama</label>
                    <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputVideoDescription">Video Açıklama</label>
                    <input type="text" class="form-control" id="exampleInputVideoDescription" asp-for="VideoDescription" placeholder="Video Açıklama Bilgisini Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputVideoUrl">Video Url</label>
                    <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Video'nun Yout Giriniz">
                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light"> Banner Bilgisini Kaydet</button>
            </form>

        </div> <!-- end card-body-->
    </div> <!-- end card-->


</div>
<!-- end card-body-->
