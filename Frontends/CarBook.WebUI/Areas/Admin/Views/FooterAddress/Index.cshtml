@model List<FooterAddressDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;

}

<div class="page-content">
    <div class="row">
        <div class="card-body">
            <h4 class="card-title">Footer Alanı Adres Sayfası</h4>
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Adres</th>
                            <th>Telefon</th>
                            <th>Email</th>
                            <th>Açıklama</th>
                            <th>Sil</th>
                            <th>Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.Address</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td>@item.Description</td>
                                <td><a href="/Admin/FooterAddress/RemoveFooterAddress/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Admin/FooterAddress/UpdateFooterAddress/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/FooterAddress/CreateFooterAddress/" class="btn btn-outline-primary">Yeni Adres Girişi</a>
            </div>

        </div>
        <!-- end card-body-->
    </div>
    <!-- end card -->

</div>






