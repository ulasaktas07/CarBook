@model UpdateAboutRequest

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="row">
        <div class="card-body">

            <h4 class="card-title">Yeni Banner Bigisi Girişi</h4>
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label for="exampleInputTitle">Başlık</label>
                    <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlığı Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputDescription">Açıklama</label>
                    <textarea rows="5" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Giriniz"> </textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputImageUrl">Kapak Resmi</label>
                    <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Hakkımda Kapak Fotoğraf Linkini  Giriniz">
                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light"> Hakkımda Bilgisini Güncelle</button>
            </form>

        </div> <!-- end card-body-->
    </div> <!-- end card-->


</div>
<!-- end card-body-->
