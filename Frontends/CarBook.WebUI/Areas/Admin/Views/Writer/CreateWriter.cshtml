@model CreateWriterRequest
@{
    ViewData["Title"] = "CreateWriter";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="row">
        <div class="card-body">

            <h4 class="card-title">Yeni Yazar Girişi</h4>
            <form method="post">
                <div class="form-group">
                    <label for="exampleInputName">Ad Soyad</label>
                    <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Ad Soyadı Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputDescription">Açıklama</label>
                    <textarea rows="5" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Giriniz"> </textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputImageUrl">Kapak Resmi</label>
                    <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Yazar Fotoğraf Linkini  Giriniz">
                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light"> Yazarı Kaydet Kaydet</button>
            </form>

        </div> <!-- end card-body-->
    </div> <!-- end card-->


</div>
<!-- end card-body-->
