@model UpdatePricingRequest

@{
    ViewData["Title"] = "UpdatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="row">
        <div class="card-body">

            <h4 class="card-title">Ödeme Periyodu Düzenleme</h4>
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label for="exampleInputName">Ödeme Periyod Adı</label>
                    <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Ödeme Periyot Adını Giriniz">
                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light"> Ödeme Periyot Bilgisini Güncelle</button>
            </form>

        </div> <!-- end card-body-->
    </div> <!-- end card-->


</div>
<!-- end card-body-->
