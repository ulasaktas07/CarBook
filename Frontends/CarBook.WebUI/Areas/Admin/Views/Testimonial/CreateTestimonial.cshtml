@model CreateTestimonialRequest

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="row">
        <div class="card-body">

            <h4 class="card-title">Yeni Referans Bilgi Girişi</h4>
            <form method="post">
                <div class="form-group">
                    <label for="exampleInputName">Referans Ad Soyad</label>
                    <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Ad Soyad Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputTitle">Referans Ünvanı</label>
                    <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Referans Ünvanını Giriniz">
                </div>
    
                <div class="form-group">
                    <label for="exampleInputImageUrl">Referans Görsel</label>
                    <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Referans Görsel Linkini Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputImageUrl">Referans Yorum</label>
                    <textarea  rows="5" class="form-control" id="exampleInputImageUrl" asp-for="Comment" placeholder=" Yorumu Giriniz"></textarea>
                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light"> Referans Bilgisini Kaydet</button>
            </form>

        </div> <!-- end card-body-->
    </div> <!-- end card-->


</div>
<!-- end card-body-->
